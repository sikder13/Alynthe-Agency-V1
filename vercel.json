{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/chat", "destination": "/api/chat" },
    { "source": "/api/leads", "destination": "/api/leads" },
    { "source": "/api/health", "destination": "/api/index" },
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/chat.ts": {
      "maxDuration": 30,
      "includeFiles": "shared/**"
    },
    "api/leads.ts": {
      "maxDuration": 10,
      "includeFiles": "shared/**"
    },
    "api/index.ts": {
      "includeFiles": "server/**, shared/**"
    }
  }
}
